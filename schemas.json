{
    "services": {
        "bsonType": "object",
        "required": ["name"],
        "additionalProperties": false,
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "name": {
                "bsonType": "string",
                "pattern": "^[a-zA-Z0-9-_][a-zA-Z0-9-_ ]{0,126}[a-zA-Z0-9-_]$"
            },
            "environmentVariables": {
                "bsonType": "object",
                "patternProperties": {
                    "^[A-Z0-9-_][A-Z0-9-_ ]{0,126}[A-Z0-9-_]$": {
                        "bsonType": "string"
                    }
                }
            },
            "url": {
                "bsonType": "string"
            }
        }
    },
    "clients": {
        "bsonType": "object",
        "required": ["name"],
        "additionalProperties": false,
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "name": {
                "bsonType": "string",
                "pattern": "^[a-zA-Z0-9-_][a-zA-Z0-9-_ ]{0,126}[a-zA-Z0-9-_]$"
            }
        }
    },
    "userTiers": {
        "bsonType": "object",
        "required": ["name", "price", "type"],
        "additionalProperties": false,
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "name": {
                "bsonType": "string",
                "pattern": "^[a-zA-Z0-9-_][a-zA-Z0-9-_ ]{0,126}[a-zA-Z0-9-_]$"
            },
            "price": {
                "bsonType": "double",
                "minimum": 0.0
            },
            "type": {
                "bsonType": "string",
                "pattern": "^[a-zA-Z0-9-_][a-zA-Z0-9-_ ]{0,126}[a-zA-Z0-9-_]$"
            }
        }
    }
}